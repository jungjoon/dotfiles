#!/bin/bash
grep    \
    -rnI                \
    --color             \
    --exclude-dir=\.bzr \
    --exclude-dir=\.git \
    --exclude-dir=\.hg  \
    --exclude-dir=\.svn \
    --exclude-dir=build \
    --exclude-dir=dist  \
    --exclude=*.lst     \
    --exclude=*.size    \
    --exclude=*.sym     \
    --exclude=.*.swp    \
    --exclude=.*.o.cmd    \
    --exclude=tags      \
    $* .
