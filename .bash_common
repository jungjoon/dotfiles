RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
RESET="\[\033[0;00m\]"

parse_git_branch_() {
      git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
parse_git_branch() {
  git diff --quiet 2> /dev/null

  res=$?

  # echo -ne "--"
  # echo -ne $res
  # echo -ne "--"

  if [[ $res != 129 ]]; then
    if [[ $res == 0 ]]; then
      echo -ne '\e[33m'
      git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
      echo -ne '\e[0;00m'
    else
      echo -ne '\e[31m'
      git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
      echo -ne '\e[0;00m'
    fi
  fi
}
